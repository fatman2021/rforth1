	processor pic18f248
	radix dec
	org 0x2000
	goto init_runtime
	org 0x2008
	reset
	org 0x2018
	reset

;---------------------------------------------------------
; Section: constants
;---------------------------------------------------------

INDF1 equ 0xfe7

FSR1H equ 0xfe2

FSR1L equ 0xfe1

;---------------------------------------------------------
; Section: code
;---------------------------------------------------------

init_runtime
	movlb 1
	clrf (a+1),1
	clrf a,1

main
	movff a,FSR1L
	movff (a+1),FSR1H
	bsf INDF1,0,0
	return

;---------------------------------------------------------
; Section: memory
;---------------------------------------------------------

a equ 0x100

END
